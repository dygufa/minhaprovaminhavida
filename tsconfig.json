{
	"buildOnSave": false,
	"compileOnSave": false,
	"compilerOptions": {
		"jsx": "react",
		"strict": true,
		"allowJs": true,
		"sourceMap": true,
		"target": "es2017",
		"module": "esnext",
		"outDir": "./dist/",
		"skipLibCheck": true,
		"noUnusedLocals": false,
		"lib": [
			"dom",
			"es2017"
		],
		"moduleResolution": "node",
		"noUnusedParameters": true,
		"experimentalDecorators": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"dist"
	],
	"awesomeTypescriptLoaderOptions": {
		"useBabel": true,
		"useCache": true
	}
}