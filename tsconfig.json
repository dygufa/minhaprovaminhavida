{
    "buildOnSave": false,
    "compileOnSave": true,
    "compilerOptions": {
        "jsx": "react",
        "strict": true,
        "allowJs": true,
        "sourceMap": true,
        "target": "es2017",
        "module": "esnext",
        "outDir": "./dist/",
        "types": [ "node" ],
        "skipLibCheck": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "lib": [ "dom", "es2017" ],
        "moduleResolution": "node",
        "noUnusedParameters": true,
        "noImplicitThis": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true
    }
}
